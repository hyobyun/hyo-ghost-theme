{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">

    <div class="container">

        <article class="{{post_class}}">

            {{! Everything inside the #post tags pulls data from the post }}
            {{#post}}

            {{! Everything below outputs content of the the post which has been published }}

            <header class="post-header">
                <h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
                <p class="post-time"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></p>
            </header>

            <section class="post-content">
              <br>
              <h4>Tags</h4>
              <p>
              {{#get 'tags' limit='all' include='count.posts' order='count.posts desc'}}
              {{#foreach tags}}
                  <a href='/tag/{{ name }}'>
                     {{ name }} <small>({{ count.posts }})</small>
                  </a><br>
              {{/foreach}}
              {{/get}}
            </p>

              <br><br>

              <h4>Posts</h4>

<p>
              {{#get "posts" limit="all"}}
       {{#foreach posts}}
           <span>
               {{#if featured}}
                   <span class='fa fa-star'></span>
               {{/if}}
               {{date published_at format="MMM DD, YYYY"}}:&nbsp;
               <a href="{{url}}">{{title}} </a>
           </span>
           <br>
       {{/foreach}}
   {{/get}}
 </p>
            </section>


            <footer class="post-footer">


                <section class="f-2">

                    <span class="f-post-tags"><i class="fa fa-tag"></i> {{#if tags}}{{tags}}{{/if}}</span>

                </section>



            </footer>

            {{/post}}

        </article>

    </div>

</main>
